{
    "name": "bkuhl/game-watcher",
    "description": "Watches games for new releases of their dedicated game server clients.",
    "license": "MIT",
    "type": "project",
    "require": {
        "php": "~7.0",
        "laravel/lumen-framework": "5.4.*",
        "vlucas/phpdotenv": "~2.2",
        "graham-campbell/github": "^5.0",
        "php-http/guzzle6-adapter": "^1.1",
        "bugsnag/bugsnag-laravel": "^2.0",
        "laravel/tinker": "^1.0"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "phpunit/phpunit": "~5.0",
        "squizlabs/php_codesniffer": "^2.6"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/",
            "database/"
        ]
    }
}
